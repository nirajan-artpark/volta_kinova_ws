<?xml version="1.0"?>
<launch>
    <arg name="indoor" default="true"/>
    <arg if="$(arg indoor)"	 name="world_choice" value="indoor"/>

    <arg name="indoor_dynamic" default="false"/>
    <arg if="$(arg indoor_dynamic)"	 name="world_choice" value="indoor_dynamic"/>

    <arg name="office" default="false"/>
    <arg if="$(arg office)" 	 name="world_choice" value="office"/>
    
    <arg name="office_full" default="false"/>
    <arg if="$(arg office_full)" name="world_choice" value="office_full"/>

    <arg name="world" default="$(find volta_simulation)/worlds/$(arg world_choice).world"/>
    <param name="use_sim_time" value="true"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <include file="$(find volta_control)/launch/control.launch" />

    <include file="$(find volta_localization)/launch/localization.launch" />

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->  
  <arg name="kinova_robotType" default="j2n7s300"/>
  <arg name="kinova_robotName" default="j2n7s300"/>
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="use_trajectory_controller" default="true"/>
  <arg name="is7dof" default="true"/>

   <arg name="model" default="$(find volta_description)/urdf/volta.xacro"/>
<!--
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
-->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>

    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model volta -param robot_description -x $(arg initX) -y $(arg initY) -z 0 -R 0 -P 0 -Y $(arg initYaw)">
    </node>
  <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
  <!-- For the 7DOF -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" if="$(arg is7dof)"
    args="-urdf -model j2n7s300 -param robot_description
        -J j2n7s300_joint_1 0.0
        -J j2n7s300_joint_2 2.9
        -J j2n7s300_joint_3 0.0
        -J j2n7s300_joint_4 1.3
        -J j2n7s300_joint_5 -2.07
        -J j2n7s300_joint_6 1.4
        -J j2n7s300_joint_7 0.0
        -J j2n7s300_joint_finger_1 1.0
        -J j2n7s300_joint_finger_2 1.0
        -J j2n7s300_joint_finger_3 1.0" />

    <node name="robot_pose_publisher" pkg="robot_pose_publisher" type="robot_pose_publisher" respawn="true"/>

  <!-- ros_control launch file -->
</launch>